---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Digital Experiences & Creative Branding by Fabian Paul" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Preload hero images -->
    <link rel="preload" as="image" href="/images/fischer.jpg">
    <link rel="preload" as="image" href="/images/harbr.jpg">
    <link rel="preload" as="image" href="/images/steillagen.jpg">
    <link rel="preload" as="image" href="/images/steillagen-2.jpg">

    <!-- GSAP Scripts -->
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    <script is:inline>
      window.addEventListener('load', () => {
        gsap.registerPlugin(ScrollTrigger);
      });
    </script>
  </head>
  <body class="bg-background text-text-primary font-tt-firs antialiased">
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'TT Firs';
    src: url('/fonts/TTFirsNeue-Light.ttf') format('truetype');
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'TT Firs';
    src: url('/fonts/TTFirsNeue-LightItalic.ttf') format('truetype');
    font-weight: 300;
    font-style: italic;
    font-display: swap;
  }

  @font-face {
    font-family: 'TT Firs';
    src: url('/fonts/TTFirsNeue-Medium.ttf') format('truetype');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'TT Firs';
    src: url('/fonts/TTFirsNeue-MediumItalic.ttf') format('truetype');
    font-weight: 500;
    font-style: italic;
    font-display: swap;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    min-height: 100vh;
  }

  ::selection {
    background-color: #00FF00;
    color: #0A0A0A;
  }
</style>