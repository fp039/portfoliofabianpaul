---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.vue';
import Footer from '../components/Footer.astro';

const skills = [
  { category: 'Design', items: ['UI/UX Design', 'Branding', 'Design Systems', 'Motion Design'] },
  { category: 'Development', items: ['Frontend Development', 'Creative Coding', 'Vue.js', 'Astro'] },
  { category: 'Tools', items: ['Figma', 'Adobe CC', 'VS Code', 'Git'] }
];
---

<Layout title="About - Fabian Paul">
  <Navigation client:load />
  
  <main class="bg-[#1E1E1E] min-h-screen">
    <!-- Header -->
    <div class="pt-32 pb-16 px-8">
      <div class="max-w-[1800px] mx-auto">
        <div class="max-w-4xl flex flex-col gap-[clamp(16px,2.5vw,24px)]">
          <span class="text-[#0F0] text-sm uppercase tracking-wider font-light">
            About
          </span>  
          <h1 class="text-[clamp(2.5rem,8vw,5rem)] font-medium leading-[0.9] tracking-tight">
            Crafting Digital<br>Experiences
          </h1>
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="px-8 pb-[clamp(48px,10vw,128px)]">
      <div class="max-w-[1800px] mx-auto">
        <!-- Hero Section -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-16 mb-32">
          <!-- Bio -->
          <div class="max-w-xl">
            <p class="text-[clamp(20px,2.5vw,32px)] font-light leading-[1.2] mb-8">
              Als Digital Designer und Developer kreiere ich digitale Erlebnisse, die Menschen begeistern. Mit einem Auge für Details und einer Leidenschaft für Innovation verbinde ich Design und Technologie.
            </p>
            <p class="text-[#E5E5E5]/80 text-[clamp(16px,1.5vw,20px)] leading-relaxed">
              Mein Ziel ist es, durch die perfekte Balance zwischen ästhetischem Design und technischer Exzellenz einzigartige digitale Lösungen zu schaffen.
            </p>
          </div>

          <!-- Image -->
          <div class="relative aspect-[3/4] md:aspect-[4/5] overflow-hidden rounded-2xl">
            <img 
              src="/images/portrait-fabian-1683x1920.jpg" 
              alt="Fabian Paul"
              class="w-full h-full object-cover object-[center_20%] transition-transform duration-700 hover:scale-105"
            />
          </div>
        </div>

        <!-- Skills Section -->
        <div class="mb-32">
          <h2 class="text-[#0F0] text-sm uppercase tracking-wider font-light mb-16">Expertise</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-16">
            {skills.map(section => (
              <div class="space-y-6">
                <h3 class="text-[clamp(18px,1.5vw,24px)] font-medium">
                  {section.category}
                </h3>
                <ul class="space-y-3">
                  {section.items.map(item => (
                    <li class="text-[#E5E5E5]/80 text-[clamp(16px,1.5vw,20px)] font-light">
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>

        <!-- Contact Section -->
        <div class="border-t border-[#E5E5E5]/10 pt-32">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
            <!-- Contact -->
            <div class="space-y-6">
              <h2 class="text-[#0F0] text-sm uppercase tracking-wider font-light">Contact</h2>
              <div class="space-y-3">
                <a 
                  href="mailto:hello@fabian-paul.design"
                  class="block text-[clamp(16px,1.5vw,20px)] hover:text-[#0F0] transition-colors"
                >
                  hello@fabian-paul.design
                </a>
                <a 
                  href="tel:+4915901443805"
                  class="block text-[clamp(16px,1.5vw,20px)] hover:text-[#0F0] transition-colors"
                >
                  +49 159 01 44 38 05
                </a>
              </div>
            </div>

            <!-- Social -->
            <div class="space-y-6">
              <h2 class="text-[#0F0] text-sm uppercase tracking-wider font-light">Social</h2>
              <div class="flex gap-8">
                <a 
                  href="#" 
                  class="text-[clamp(16px,1.5vw,20px)] hover:text-[#0F0] transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  LinkedIn
                </a>
                <a 
                  href="#" 
                  class="text-[clamp(16px,1.5vw,20px)] hover:text-[#0F0] transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Instagram
                </a>
                <a 
                  href="#" 
                  class="text-[clamp(16px,1.5vw,20px)] hover:text-[#0F0] transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Xing
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  img {
    transition: transform 0.8s cubic-bezier(0.76, 0, 0.24, 1);
  }

  img:hover {
    transform: scale(1.05);
  }
</style> 