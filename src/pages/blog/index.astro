---
import BlogLayout from '../../layouts/BlogLayout.astro';
import BlogCard from '../../components/BlogCard.vue';
import '../../styles/prose.css';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BlogLayout 
  title="Blog - Digital Experiences & Creative Branding"
  description="Einblicke in UI/UX-Design, Webentwicklung und kreatives Branding"
>
  <div class="container mx-auto px-8 py-[clamp(4rem,10vh,8rem)]">
    <div class="max-w-7xl mx-auto">
      <header class="text-center space-y-6 mb-[clamp(3rem,8vh,6rem)]">
        <h1 class="text-fluid-xl font-medium text-text-primary">Blog</h1>
        <p class="text-fluid-sm text-text-secondary max-w-2xl mx-auto">
          Einblicke in Design, Entwicklung und die Schnittstelle beider Welten.
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map(post => (
          <BlogCard 
            key={post.slug}
            client:visible
            slug={post.slug}
            {...post.data}
          />
        ))}
      </div>
    </div>
  </div>
</BlogLayout>