---
import BlogLayout from '../../layouts/BlogLayout.astro';
import BlogCard from '../../components/BlogCard.vue';

const posts = [
  {
    slug: 'principles-of-modern-ui-design',
    title: 'The Principles of Modern UI Design',
    excerpt: 'Explore the fundamental principles that shape modern user interface design, from visual hierarchy to micro-interactions.',
    date: '2024-01-15',
    image: '/images/blog/ui-design-principles.jpg',
    readingTime: 8,
    tags: ['UI Design', 'Design Principles', 'UX']
  },
  {
    slug: 'web-development-trends-2024',
    title: 'Web Development Trends That Will Shape 2024',
    excerpt: 'Discover the latest trends in web development, from AI integration to advanced animation techniques.',
    date: '2024-01-10',
    image: '/images/blog/web-dev-trends.jpg',
    readingTime: 10,
    tags: ['Web Development', 'Trends', 'Technology']
  },
  {
    slug: 'bridging-design-development-gap',
    title: 'Bridging the Gap Between Design and Development',
    excerpt: 'Learn how designers and developers can work together more effectively to create seamless digital experiences.',
    date: '2024-01-05',
    image: '/images/blog/design-dev-bridge.jpg',
    readingTime: 12,
    tags: ['Design', 'Development', 'Collaboration']
  }
];
---

<BlogLayout 
  title="Blog - Digital Experiences & Creative Branding"
  description="Insights about UI/UX design, web development, and creative branding"
>
  <div class="px-8 py-16">
    <div class="max-w-7xl mx-auto">
      <header class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
        <p class="text-text-secondary text-lg max-w-2xl mx-auto">
          Insights about design, development, and the intersection of both worlds.
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map(post => (
          <BlogCard 
            client:visible
            {...post}
          />
        ))}
      </div>
    </div>
  </div>
</BlogLayout>