---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.vue';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm.vue';
import CalendarBooking from '../components/CalendarBooking.vue';

---

<Layout title="Kontakt - Fabian Paul">
  <Navigation client:load />
  
  <main class="bg-background min-h-screen">
    <!-- Contact Hero Section -->
    <section class="pt-32 pb-16">
      <div class="container mx-auto px-8">
        <div class="max-w-4xl mx-auto space-y-16">
          <!-- Intro -->
          <div class="space-y-4">
            <h1 class="text-fluid-xl font-medium text-text-primary">Lass uns sprechen</h1>
            <p class="text-fluid-base text-text-secondary">
              Du hast ein spannendes Projekt oder möchtest einfach mal unverbindlich über deine Ideen sprechen? 
              Buche dir gerne einen Termin für ein Erstgespräch oder schreib mir eine Nachricht.
            </p>
          </div>
          
          <!-- Calendar Booking -->
          <div class="space-y-8 mx-auto">
            <div class="space-y-4">
              <h2 class="text-fluid-lg font-medium text-text-primary">Termin buchen</h2>
              <p class="text-fluid-sm text-text-secondary">
                Wähle einen passenden Termin für ein 30-minütiges Erstgespräch.
              </p>
            </div>
            <CalendarBooking client:load />
          </div>

          <!-- Contact Form -->
          <div class="space-y-8">
            <div class="space-y-4">
              <h2 class="text-fluid-lg font-medium text-text-primary">Nachricht senden</h2>
              <p class="text-fluid-sm text-text-secondary pb-14">
                Oder schreib mir einfach eine Nachricht. Ich melde mich schnellstmöglich bei dir.
              </p>
            </div>
            <ContactForm client:load />
          </div>

          <!-- Alternative Kontaktmöglichkeiten -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-8">
            <div class="space-y-2">
              <h2 class="text-fluid-lg font-medium text-text-primary">E-Mail</h2>
              <p class="text-fluid-base text-text-secondary">
                <a href="mailto:hello@fabian-paul.design" class="hover:text-accent transition-colors text-fluid-sm">
                  hello@fabian-paul.design
                </a>
              </p>
            </div>
            <div class="space-y-2">
              <h2 class="text-fluid-lg font-medium text-text-primary">Social Media</h2>
              <div class="flex justify-center min-[875px]:justify-start min-[875px]:w-[15%] pt-4">
                <div class="flex items-center gap-[clamp(12px,2vw,24px)]">
                  <a 
                    href="#" 
                    class="text-fluid-sm text-[#0F0] font-medium leading-none hover:transform hover:translate-y-[-5px] transition-all duration-300 whitespace-nowrap"
                    target="_blank" 
                    rel="noopener noreferrer"
                  >
                    Xi
                  </a>
                  <a 
                    href="#" 
                    class="text-fluid-sm text-[#0F0] font-medium leading-none hover:transform hover:translate-y-[-5px] transition-all duration-300 whitespace-nowrap"
                    target="_blank" 
                    rel="noopener noreferrer"
                  >
                    Li
                  </a>
                  <a 
                    href="#" 
                    class="text-fluid-sm text-[#0F0] font-medium leading-none hover:transform hover:translate-y-[-5px] transition-all duration-300 whitespace-nowrap"
                    target="_blank" 
                    rel="noopener noreferrer"
                  >
                    Ig
                  </a>
                  <a 
                    href="#" 
                    class="text-fluid-sm text-[#0F0] font-medium leading-none hover:transform hover:translate-y-[-5px] transition-all duration-300 whitespace-nowrap"
                    target="_blank" 
                    rel="noopener noreferrer"
                  >
                    Wa
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
// Initialisiere die Animationen
const initContactAnimations = () => {
  if (typeof window.gsap === 'undefined') {
    console.warn('GSAP ist nicht geladen');
    return;
  }

  window.gsap.registerPlugin(ScrollTrigger);

  const timeline = window.gsap.timeline({
    scrollTrigger: {
      trigger: "main",
      start: "top center",
      end: "bottom center",
      once: true
    }
  });

  timeline
    .from("h1", {
      opacity: 0,
      y: 30,
      duration: 0.6
    })
    .from("p", {
      opacity: 0,
      y: 30,
      duration: 0.6
    }, "-=0.3")
    .from(".space-y-8", {
      opacity: 0,
      y: 30,
      duration: 0.6,
      stagger: 0.2
    }, "-=0.3");
};

// Initialize animations
window.addEventListener('load', initContactAnimations);
document.addEventListener('astro:page-load', initContactAnimations);
</script> 