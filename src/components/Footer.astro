<script>
  // Flag f체r die Animation in localStorage speichern
  const hasAnimated = localStorage.getItem('footerHasAnimated');

  // Initialize GSAP fade-in animation
  window.addEventListener('load', () => {
    if (typeof gsap === 'undefined') return;

    // Nur animieren, wenn es das erste Mal ist
    if (!hasAnimated) {
      gsap.from("#footer > div > div", {
        scrollTrigger: {
          trigger: "#footer",
          start: "top bottom-=100",
          toggleActions: "play none none none" // "reverse" entfernt
        },
        y: 30,
        opacity: 0,
        duration: 0.8,
        stagger: 0.2,
        ease: "power2.out",
        onComplete: () => {
          // Nach der Animation als "animiert" markieren
          localStorage.setItem('footerHasAnimated', 'true');
        }
      });
    } else {
      // Wenn bereits animiert, Elemente direkt sichtbar machen
      gsap.set("#footer > div > div", {
        y: 0,
        opacity: 1
      });
    }
  });
</script>

<style>
  /* Prevent layout shift during animations */
  #footer > div > div {
    will-change: transform, opacity;
  }
</style>