---
const { prevProject, nextProject } = Astro.props;
---

<section class="relative overflow-hidden w-full py-32 bg-[#181818]">
  <!-- Hintergrund-Effekt -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(0,255,0,0.02),transparent_70%)]"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-8">
    <div class="text-center space-y-12">
      <div class="space-y-4">
        <span class="text-[#0F0] text-sm uppercase tracking-wider">Next Project</span>
        <h2 class="text-[clamp(2rem,5vw,3.5rem)] font-medium text-[#E5E5E5] leading-tight">
          Bereit f체r dein<br/>eigenes Projekt?
        </h2>
        <p class="text-[#E5E5E5]/60 text-[clamp(1rem,1.5vw,1.25rem)] font-light">
          Lass uns gemeinsam deine Idee in die Realit채t umsetzen
        </p>
      </div>
      
      <div class="flex flex-wrap justify-center gap-[30px]">
        <a 
          href="/contact"
          class="relative flex items-center justify-center px-[clamp(20px,3vw,35.833px)] py-[clamp(8px,1.5vw,11.944px)] rounded-full bg-[#0F0] text-[#1D1D1B] hover:scale-105 transition-all hover:shadow-[0_0_30px_rgba(0,255,0,0.3)]"
          style="font-size: clamp(1rem, 1.5vw, 1.194rem); font-weight: 500; line-height: 1;"
        >
          <span class="relative z-10">Erstgespr채ch vereinbaren</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Projekt Navigation -->
  <div class="absolute bottom-0 left-0 right-0 flex justify-between items-center px-8 py-12 max-w-[1800px] mx-auto">
    {prevProject && (
      <a href={`/projects/${prevProject.slug}`} class="group flex items-center gap-4 text-[#E5E5E5] hover:text-[#0F0] transition-colors duration-300">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6 transform group-hover:-translate-x-2 transition-transform duration-300">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <div class="text-left">
          <span class="block text-sm text-[#E5E5E5]/60">Vorheriges Projekt</span>
          <span class="block text-lg font-medium">{prevProject.title}</span>
        </div>
      </a>
    )}

    {nextProject && (
      <a href={`/projects/${nextProject.slug}`} class="group flex items-center gap-4 text-[#E5E5E5] hover:text-[#0F0] transition-colors duration-300 ml-auto">
        <div class="text-right">
          <span class="block text-sm text-[#E5E5E5]/60">N채chstes Projekt</span>
          <span class="block text-lg font-medium">{nextProject.title}</span>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6 transform group-hover:translate-x-2 transition-transform duration-300">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    )}
  </div>
</section>

<style>
  section {
    border-top: 1px solid rgba(255,255,255,0.03);
    border-bottom: 1px solid rgba(255,255,255,0.03);
  }
</style>